{% extends 'base.html.twig' %}

{% block title %}Socios{% endblock %}

{% block body %}
    <h1>Socios</h1>
    {% if app.flashes('error') is not empty %}
        <div class="alert alert-danger">
            No se ha podido eliminar el socio porque tiene pr√©stamos asociados.
        </div>
    {% endif %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for socio in socios %}
            <tr>
                <td>{{ socio.id }}</td>
                <td>{{ socio.nombre }}</td>
                <td>{{ socio.apellidos }}</td>
                <td>{{ socio.correo }}</td>
                <td>{{ socio.telefono }}</td>
                <td>{{ socio.direccion }}</td>
                <td>
                    <a href="{{ path('app_socio_show', {'id': socio.id}) }}">Ver</a>
                    <a href="{{ path('app_socio_edit', {'id': socio.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No hay ningun registro</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_socio_new') }}">Crear nuevo</a>
{% endblock %}
