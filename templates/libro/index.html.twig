{% extends 'base.html.twig' %}

{% block title %}Libros{% endblock %}

{% block body %}
    <h1>Libros</h1>
    {% if app.flashes('error') is not empty %}
        <div class="alert alert-danger">
            No se ha podido eliminar el libro porque tiene ejemplares asociados.
        </div>
    {% endif %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Editorial</th>
                <th>Genero</th>
                <th>Numero_ejemplares</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for libro in libros %}
            <tr>
                <td>{{ libro.id }}</td>
                <td>{{ libro.titulo }}</td>
                <td>{{ libro.autor }}</td>
                <td>{{ libro.editorial }}</td>
                <td>{{ libro.genero }}</td>
                <td>{{ libro.numeroEjemplares }}</td>
                <td>
                    <a href="{{ path('app_libro_show', {'id': libro.id}) }}">Ver | </a>
                    <a href="{{ path('app_libro_edit', {'id': libro.id}) }}">Editar </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No hay ningun registro</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_libro_new') }}">Crear nuevo</a>
{% endblock %}
